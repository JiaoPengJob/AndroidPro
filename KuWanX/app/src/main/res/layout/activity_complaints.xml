<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context="com.tch.kuwanx.ui.chat.ComplaintsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="请选择投诉原因"
            android:textColor="#8A8A89"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布不适当内容对我造成骚扰"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/ibComplaintsOne"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/switch_unsel" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#F2F2F2"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="存在欺诈骗钱行为"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/ibComplaintsSecond"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/switch_unsel" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#F2F2F2"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布仿冒品信息"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/ibComplaintsThree"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/switch_unsel" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#F2F2F2"></View>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ibComplaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/oval_submit_button"
        android:text="确认投诉"
        android:textColor="#333333"
        android:textSize="15sp" />

</RelativeLayout>
