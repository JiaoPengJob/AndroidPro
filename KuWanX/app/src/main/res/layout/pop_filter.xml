<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="筛选"
            android:textColor="#919191"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFilterCity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="同城"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterFaceCross"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="面交"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterFlashing"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="闪送"
                android:textColor="#919191"
                android:textSize="11sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#F2F2F2"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="押金范围（豆）"
            android:textColor="#919191"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/etFilterLowestPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_filter_input"
                    android:gravity="center"
                    android:hint="最低价"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#BEBABA"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="11sp" />

                <View
                    android:id="@+id/viewFilterLowestPrice"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#00000000"></View>

            </FrameLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="#F2F2F2"></View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/etFilterHighestPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/oval_filter_input"
                    android:gravity="center"
                    android:hint="最高价"
                    android:inputType="number"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#BEBABA"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="11sp" />

                <View
                    android:id="@+id/viewFilterHighestPrice"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="#00000000"></View>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFilterOne"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="1豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterHundred"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="100豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterTwoHundred"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="200豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFilterFiveHundred"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="500豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterThousand"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="1000豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterTwoThousand"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="2000豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tvFilterFiveThousand"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="5000豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvFilterMillion"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:text="10000豆以上"
                android:textColor="#919191"
                android:textSize="11sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/oval_filter_item"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="#919191"
                android:textSize="11sp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btFilterReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F3C407"
            android:gravity="center"
            android:text="重置"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btFilterConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F75708"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>