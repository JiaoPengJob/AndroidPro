<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llProposedRepParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.tch.kuwanx.ui.home.ProposedReplacementActivity">

    <include layout="@layout/title"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我提供的物品"
        android:textColor="#333333"
        android:textSize="13sp" />

    <View
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/oval_submit_button"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProposedRepRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:padding="5dp"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F2F2F2"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="我提供押金"
        android:textColor="#333333"
        android:textSize="13sp" />

    <View
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/oval_submit_button"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivInfoAdd"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/info_add" />

        <LinearLayout
            android:id="@+id/llInfoBeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/beans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="豆"
                android:textColor="#F9BC01"
                android:textSize="13sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/etProposedRepEdit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/llInfoBeans"
            android:layout_toRightOf="@+id/ivInfoAdd"
            android:background="@drawable/oval_add_friend_search"
            android:gravity="center"
            android:hint="请输入押金"
            android:inputType="number|numberDecimal"
            android:lines="1"
            android:textColor="#333333"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlProposedRepPostWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:clickable="true"
        android:padding="10dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/info_add" />

        <TextView
            android:id="@+id/tvProposedRepPostWay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="邮寄"
            android:textColor="#333333"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
