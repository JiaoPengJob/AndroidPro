<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llEmoParent"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFFFFF"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/llComButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btEmojSend"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/oval_submit_button"
            android:text="评价"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </LinearLayout>

    <io.github.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/editEmoHome"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/llComButton"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:hint="请输入您的评价"
        android:lines="3"
        android:maxLines="3"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="13sp"
        emojicon:emojiconSize="13sp" />

</RelativeLayout>