<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProComItemPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvProComItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textColor="#0B0B0B"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProComItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年月日"
            android:textColor="#837F7F"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="规格："
            android:textColor="#837F7F"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvProComItemNorm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格参数"
            android:textColor="#837F7F"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvProComItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="3"
        android:text="内容...内容...内容...内容...内容...内容..."
        android:textColor="#0B0B0B"
        android:textSize="13sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProComImgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>