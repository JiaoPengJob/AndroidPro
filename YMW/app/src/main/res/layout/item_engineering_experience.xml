<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:background="@drawable/shadow_project_undergo"
    android:orientation="vertical"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_name"
            android:textColor="@color/font_four"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvExperienceProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_four"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_time"
            android:textColor="@color/font_four"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvExperienceProjectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_four"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_content"
            android:textColor="@color/font_four"
            android:textSize="15sp" />

        <TextView
         android:id="@+id/tvExperienceProjectContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_four"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>