<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f3"
    android:orientation="vertical"
    tools:context="com.tch.youmuwa.ui.activity.worker.WithdrawActivity">

    <include layout="@layout/title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shadow_project_undergo"
        android:orientation="vertical"
        android:padding="21dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_number"
            android:textColor="@color/font_four"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥"
                android:textColor="@color/yellow_f6"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etWithdrawalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="0"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/font_four"
                android:textColorHint="@color/search_hint"
                android:textSize="25sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="@color/search_hint"></View>

        <TextView
            android:id="@+id/tvWithdrawalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/font_four"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btNowWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/worker_button_sel"
        android:text="@string/now_withdraw"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
