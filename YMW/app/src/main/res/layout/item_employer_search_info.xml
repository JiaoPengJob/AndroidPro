<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/oval_search_info"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivSearchWorkerPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/font_four"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/llSearchStarParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tvWorkerName"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tvSearchConstructionState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/oval_guide_button"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="施工"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_type"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvSearchWorkerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/worker_year_info"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvSearchWorkerYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orders_number"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvSearchOrdersNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/good_at_it"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tvSearchGoodAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/font_four"
                android:textSize="13dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>