<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_item_fine_class_user_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test_fine_class" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_item_fine_class_user_photo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-35dp"
        android:src="@mipmap/title_photo_fine_class"
        app:civ_border_color="#00000000"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_fine_class_user_photo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-25dp"
        android:layout_toRightOf="@id/civ_user_photo"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魏小千"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="百度首席设计师"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_fine_class_user_photo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如何通过二次创造经营多样人生"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="如何通过二次创造飞的疯狂老师能否两三年麻烦了第四方老师你发了多少了法律司法你都说了你发了多少了经营多样人生"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/time_player" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="29分30秒" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/location_unline" />

            <TextView
                android:id="@+id/tv_item_fine_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="北京市朝阳区" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="¥10元"
                android:textColor="@color/single_green"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>