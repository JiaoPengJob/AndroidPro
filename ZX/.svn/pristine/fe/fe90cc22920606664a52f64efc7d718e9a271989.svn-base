package com.tch.zx.activity;

import android.os.Build;
import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentTabHost;
import android.support.v4.view.PagerAdapter;
import android.support.v4.view.ViewPager;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.MotionEvent;
import android.view.View;
import android.view.Window;
import android.view.WindowManager;
import android.widget.ImageView;
import android.widget.TabHost;
import android.widget.TextView;

import com.tch.zx.R;
import com.tch.zx.adapter.ChiefAdapter;
import com.tch.zx.fragment.ChiefFragment;
import com.tch.zx.fragment.contacts.ContactsMainFragment;
import com.tch.zx.fragment.message.MessageMainFragment;
import com.tch.zx.view.CustomViewPager;

import java.util.ArrayList;
import java.util.List;

import butterknife.BindView;
import butterknife.ButterKnife;

/**
 * 代替主页
 */
public class ChiefActivity extends AppCompatActivity {

    @BindView(R.id.vp_pager)
    CustomViewPager vp_pager;

    public static FragmentTabHost fth_host;

    //加载Fragment的集合
    private List<Fragment> fragments;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        //去除标题栏,两种方式
        requestWindowFeature(Window.FEATURE_NO_TITLE);
        if (getSupportActionBar() != null) {
            getSupportActionBar().hide();
        }
        setContentView(R.layout.activity_chief);
        ButterKnife.bind(ChiefActivity.this);
        //设置沉浸式状态栏
        if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.KITKAT) {
            WindowManager.LayoutParams localLayoutParams = getWindow().getAttributes();
            localLayoutParams.flags = (WindowManager.LayoutParams.FLAG_TRANSLUCENT_STATUS | localLayoutParams.flags);
        }
        fth_host = (FragmentTabHost) findViewById(R.id.fth_host);
        initTabHost();
        initPager();
        bindTabAndPager();
    }

    private void initTabHost() {
        fth_host.setup(this, getSupportFragmentManager(), R.id.vp_pager);
        fth_host.getTabWidget().setDividerDrawable(null);
        fth_host.addTab(fth_host.newTabSpec("line").setIndicator(createView(R.drawable.selector_bottom_tab_line, "直线")), ChiefFragment.class, null);
        fth_host.addTab(fth_host.newTabSpec("message").setIndicator(createView(R.drawable.selector_bottom_tab_message, "消息")), MessageMainFragment.class, null);
        fth_host.addTab(fth_host.newTabSpec("friend").setIndicator(createView(R.drawable.selector_bottom_tab_friend, "人脉")), ContactsMainFragment.class, null);
        fth_host.addTab(fth_host.newTabSpec("info").setIndicator(createView(R.drawable.selector_bottom_tab_mine, "我的")), ChiefFragment.class, null);
    }

    /**
     * 初始化 pager 绑定适配器
     */
    private void initPager() {
        fragments = new ArrayList<>();
        fragments.add(new ChiefFragment());
        fragments.add(new MessageMainFragment());
        fragments.add(new ContactsMainFragment());
        fragments.add(new ChiefFragment());
        ChiefAdapter adapter = new ChiefAdapter(getSupportFragmentManager(), fragments);
        vp_pager.setAdapter(adapter);
    }

    /**
     * 为TabHost和viewPager 添加监听 让其联动
     */
    private void bindTabAndPager() {
        fth_host.setOnTabChangedListener(new TabHost.OnTabChangeListener() {
            @Override
            public void onTabChanged(String s) {
                int position = fth_host.getCurrentTab();
                vp_pager.setCurrentItem(position, true);
            }
        });
        //设置Viewpager不可滑动
        vp_pager.setPagingEnabled(false);

    }

    /**
     * 返回view
     *
     * @param icon
     * @param tab
     * @return
     */
    private View createView(int icon, String tab) {
        View view = getLayoutInflater().inflate(R.layout.layout_tab_bottom, null);
        ImageView imageView = (ImageView) view.findViewById(R.id.icon_bottom_menu_img);
        TextView title = (TextView) view.findViewById(R.id.icon_bottom_menu_text);
        imageView.setImageResource(icon);
        title.setText(tab);
        return view;
    }
}
