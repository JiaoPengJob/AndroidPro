<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_bgm"
    tools:context="com.tch.zx.activity.mine.CollectionMineActivity">

    <include
        android:id="@+id/title_layout_collection"
        layout="@layout/title_white"></include>

    <com.tch.zx.view.GoTopScrollView
        android:id="@+id/goto_top_collection_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout_collection"
        android:layout_marginTop="10dp"
        android:background="@color/single_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_collection_mine_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </com.tch.zx.view.GoTopScrollView>

    <ImageView
        android:id="@+id/iv_top_collection_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/goto_top"
        android:visibility="gone" />

</RelativeLayout>
