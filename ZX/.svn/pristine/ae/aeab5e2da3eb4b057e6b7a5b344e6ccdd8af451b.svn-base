    class UnlineHolder extends RecyclerView.ViewHolder {
//        @BindView(R.id.tv_online_enjoy_num)
//        TextView tv_online_enjoy_num;

        public UnlineHolder(View itemView) {
            super(itemView);
            ButterKnife.bind(this, itemView);
        }
    }

}
