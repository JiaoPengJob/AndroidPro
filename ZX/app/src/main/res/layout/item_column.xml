<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivSpecialColumnPicMin"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test_online_player" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ivSpecialColumnPicMin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSpecialColumnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="薛兆丰的北大经济学课"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北大研究院教授"
                android:textColor="@color/single_green"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAppUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="薛兆丰"
                android:textColor="@color/text_user"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSpecialColumnByName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="只给你地道的经济学思维"
            android:textColor="@color/text_user"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSpecialColumnPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="￥199/年"
            android:textColor="@color/single_green"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSubscriptionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1666人订阅"
            android:textColor="@color/text_user"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/right_point_online" />

    </LinearLayout>

</RelativeLayout>