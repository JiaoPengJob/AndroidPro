<?xml version="1.0" encoding="utf-8"?>
<com.tubb.smrv.SwipeHorizontalMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipeHorizontalMenuLayout"
    >

    <!-- item content view, the id must be (smContentView) -->
    <include android:id="@+id/smContentView"  layout="@layout/item_message_remind_delete"/>

    <!-- item swipe menu, the id must be (smMenuView) -->
    <include android:id="@+id/smMenuViewRight" layout="@layout/menu_delete"/>

</com.tubb.smrv.SwipeHorizontalMenuLayout>