<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_user_photo_msg"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civUserItemPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                app:civ_border_color="#00000000"
                android:src="@mipmap/title_photo_fine_class"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tvUserItemNum"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_circle_textview"
                android:gravity="center"
                android:padding="2dp"
                android:text="99+"
                android:textColor="@color/single_white"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/rl_user_photo_msg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/text_three"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvUserItemPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/single_green"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvUserItemLastMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/text_user"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvUserItemLastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="12:12"
            android:textColor="@color/text_user"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>