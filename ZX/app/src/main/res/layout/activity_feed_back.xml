<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/single_white"
    tools:context="com.tch.zx.activity.mine.settings.FeedBackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title_white"></include>

        <EditText
            android:id="@+id/etFeedBack"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_search"
            android:gravity="top"
            android:padding="5dp"
            android:textColor="@color/text_user"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner_background_green"
        android:gravity="center"
        android:padding="10dp"
        android:text="确认提交"
        android:textColor="@color/single_white"
        android:textSize="20sp" />

</RelativeLayout>
