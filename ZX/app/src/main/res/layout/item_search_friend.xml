<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/single_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civSearchItemPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/title_photo_fine_class"
        app:civ_border_color="#00000000"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSearchItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微笑前"
            android:textColor="@color/text_user"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSearchItemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="美团的外卖 UI师"
            android:textColor="@color/single_green"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>