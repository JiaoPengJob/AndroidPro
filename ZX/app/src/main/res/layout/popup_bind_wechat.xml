<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_popup_bind_wechat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_cancel_bind_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_corner_bgm_gray"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/single_white"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_line_bind_wechat"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/tv_cancel_bind_wechat"
        android:layout_marginBottom="5dp"
        android:background="@color/line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_line_bind_wechat"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="解除绑定后,继续使用此微信登录将无法查看和使用当前账号内容"
            android:textColor="@color/text_user"
            android:layout_marginTop="20dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_corner_background_green"
            android:gravity="center"
            android:padding="10dp"
            android:text="解除绑定"
            android:textColor="@color/single_white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>